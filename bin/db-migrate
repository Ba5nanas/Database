#!/usr/bin/env php
<?php
$autoloadPath = "";
$autoloadScriptName = "autoload.php";
$autoloadTryDir = __DIR__;
do {
	$autoloadTryDir = realpath($autoloadTryDir . "/..");
	if(is_dir($autoloadTryDir . "/vendor")) {
		$autoloadTryDir = $autoloadTryDir . "/vendor";
	}
	$autoloadPath = $autoloadTryDir . "/" . $autoloadScriptName;
} while(!file_exists($autoloadPath) && $autoloadTryDir !== "/");

require($autoloadPath);

$defaultConfig = [
	"source" => "mysql",
	"base_path" => "src/query",
	"migration_path" => "_migration",
	"migration_table" => "_migration",
	"host" => "localhost",
	"user" => "admin",
	"pass" => "",
];

$configFilePath = __DIR__ . "/../config.ini";

$config = [];

if(file_exists($configFilePath)) {
	$fullConfig = parse_ini_file($configFilePath, true);
	if(!empty($fullConfig["database"])) {
		$config = $fullConfig["database"];
	}
}

$config = array_merge($defaultConfig, $config);

$settings = new Gt\Database\Connection\Settings(
	$config["base_path"],
	$config["source"],
	$config["database_name"],
	$config["host"],
	$config["user"],
	$config["pass"]
);

$db = new Gt\Database\Client($settings);
var_dump($db);die();